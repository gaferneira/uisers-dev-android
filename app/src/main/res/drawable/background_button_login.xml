<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <gradient
        android:angle="90"
        android:endColor="@color/green_600"
        android:startColor="@color/green_500"
        android:type="linear" />

    <stroke
        android:width="1dp"
        android:color="#d4d4d4"></stroke>

    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"></padding>

    <corners android:radius="11dp"></corners>

</shape>