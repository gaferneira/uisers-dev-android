<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/padding_margin_micro"
    android:theme="@style/ThemeOverlay.MyApp.Light">

    <LinearLayout
        android:id="@+id/container_widget_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/padding_margin_small"
        android:layout_marginHorizontal="@dimen/padding_margin_small"
        android:background="?colorPrimary">

        <TextView
            android:id="@+id/text_view_class_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="14sp"
            android:textColor="?colorOnSecondary"
            tools:text="Materia" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="?colorOnSecondary"
                tools:text="Lugar" />

            <TextView
                android:id="@+id/text_view_hour"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_margin_small"
                android:textSize="12sp"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/grey_500"
                tools:text="9:00-11:00" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>